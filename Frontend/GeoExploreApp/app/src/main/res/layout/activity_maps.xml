<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/activity_maps_info_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#55000000"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:padding="16dp"
        android:text="Tap on the map to select the location for your report"
        android:visibility="gone"
        android:layout_marginTop="16dp"/>


    <Button
        android:id="@+id/activity_maps_create_report_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_above="@id/activity_maps_show_report_button"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#FF5722"
        android:text="Create Report" />

    <Button
        android:id="@+id/activity_maps_show_report_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#0B30F3"
        android:text="Show Reports" />

</RelativeLayout>

