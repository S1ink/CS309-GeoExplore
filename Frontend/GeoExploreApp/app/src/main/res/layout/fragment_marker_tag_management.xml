<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarkerTagManagementFragment">

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/tagInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/backButton"
        android:gravity="center_horizontal"
        android:text="Tag operations result will appear here"
        android:textAlignment="center"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:padding="16dp">

        <EditText
            android:id="@+id/tagIdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Tag Id (for specific operations)"
            android:inputType="number"/>

        <EditText
            android:id="@+id/tagNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Tag Name (for create/update)"
            android:inputType="text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">


            <Button
                android:id="@+id/menuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tag Options" />

            <Button
                android:id="@+id/getAllTagsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get All Tags" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>